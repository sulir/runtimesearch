<idea-plugin>
    <id>com.github.sulir.runtimesearch</id>
    <name>RuntimeSearch</name>
    <vendor>Matúš Sulír</vendor>

    <description><![CDATA[
        RuntimeSearch searches for occurrences of strings in a running program.
    ]]>
    </description>

    <idea-version since-build="193.6015"/>
    <depends>com.intellij.modules.java</depends>

    <actions>
        <group>
            <separator />
            <action id="RuntimeFind" class="com.github.sulir.runtimesearch.plugin.RuntimeFindAction"
                    text="Find in Runtime..." description="Find a string in a running program">
                <keyboard-shortcut keymap="$default" first-keystroke="shift alt F2" />
            </action>
            <action id="RuntimeFindNext" class="com.github.sulir.runtimesearch.plugin.RuntimeFindNextAction"
                    text="Find Next in Runtime"
                    description="Find the next occurrence of the searched string in a running program">
                <keyboard-shortcut keymap="$default" first-keystroke="shift alt F3" />
            </action>
            <add-to-group group-id="GoToMenu" anchor="last" />
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.github.sulir.runtimesearch.plugin.RuntimeFindManager" />
    </extensions>

    <projectListeners>
        <listener class="com.github.sulir.runtimesearch.plugin.PauseHandler"
                  topic="com.intellij.debugger.impl.DebuggerManagerListener" />
    </projectListeners>

</idea-plugin>